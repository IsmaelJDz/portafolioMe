 @import "slider.styl"

html
  font-size 16px

.u-title
  border-bottom 2px dashed #00CCFF
  color #00CCFF
  font-size 1.5em
  font-weight normal
  padding-bottom .5em
  text-align center
  
.u-containerDefault
  max-width 800px
  margin 0 auto 

.Header
  background-image url('../img/portada.jpg')
  background-position center
  background-repeat no-repeat
  background-size cover
  margin-top 3.75em
  padding 1.3em 0
  text-align center

.Header-image
  border 4px solid white
  border-radius 50%

.Header-name, .Header-link
  color white

.Header-link
  font-size 2.2em
  font-weight bold
  text-decoration none

.Header-name
  font-size 1.5em
  font-weight 300
  margin 0

.MainMenu
  background #1E1E1E
  text-align center
  height 3.75em
  position fixed
  left 0
  right 0
  top 0

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block

.MainMenu-link
  color #00DBFF
  text-decoration none
  line-height 3.75em
  margin-right 1.5em

.Profile
  text-align center
  padding 0 1em

.Profile-link
  background orange
  color white
  text-decoration none
  padding .5em 1em
  border-radius 2em
  margin-right .5em
  display inline-block
  margin-bottom 1em
  &.twitter
    background #55ACEE
  &.facebook
    background #4862A3
  &.github
    background #829AA8    

.Work
  margin-top 2em
  text-align center
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around

.Work-item
  display inline-block
  margin-bottom 1.8em

.Work-imageContainer
  margin 0

.Work-description
  font-size 1.5em
  color #515151
  font-style italic

.Footer
  background-image url('../img/bg2.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  padding 2em 0
  text-align center

.Footer-form
  text-align center
  display inline-block

.Footer-left
  display inline-block
  max-width 32em
  text-align center
  vertical-align top

.Footer-title
  color white

.Footer-formInput,
.Footer-textarea
  color white
  border none
  display block
  margin-bottom 1em
  border-radius 2em
  padding .5em
  margin 0 auto 1em
  outline 0

.Footer-textarea
  resize none

.Footer-button
  background orange
  color white
  border-radius 1em
  border none
  padding .5em 1em
  
.Slider
  background black
  &-container
    max-width 1024px
    margin 0 auto  

@media screen and (max-width: 480px)

  .Profile
    &-link
      display block
     
@media screen and (max-width: 767px)

  .Footer
    &-form
      display block
    &-formInput
    &-textarea
      width 90%
      box-sizing border-box  
