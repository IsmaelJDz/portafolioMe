@import "slider.styl"

@font-face
  font-family "foundation-icons"
  src: url("foundation-icons/foundation-icons.eot")
  src: url("foundation-icons/foundation-icons.eot?#iefix") format("embedded-opentype"),
       url("foundation-icons/foundation-icons.woff") format("woff"),
       url("foundation-icons/foundation-icons.ttf") format("truetype"),
       url("foundation-icons/foundation-icons.svg#fontcustom") format("svg")
  font-weight normal
  font-style normal

.ok
  background #6FC36F
  color wheat
  display none
  height 50px
  width 100%
  line-height 50px
  margin-bottom 10px


.error
  background #E88383
  color wheat
  display none
  height 50px
  width 100%
  line-height 50px
  margin-bottom 10px


.fi-heart:before,
.fi-social-twitter:before,
.fi-social-facebook:before,
.fi-social-github:before,
.fi-social-linkedin:before,
.fi-align-justify:before,
.fi-heart:before
  font-family "foundation-icons"
  font-style normal
  font-weight normal


.fi-social-twitter:before
  content "\f1e4"

.fi-social-facebook:before
  content "\f1c4"

.fi-social-github:before
  content "\f1c9"

.fi-heart:before
  content "\f159"
  color red

.fi-social-linkedin:before
  content: "\f1d0"

.fi-align-justify:before
  content: "\f103"

html
  font-size 16px

body
  font-family: 'Poiret One'

.u-title
  border-bottom 1px solid #00CCFF
  color #00CCFF
  font-size 2.5em
  font-weight normal
  padding-bottom .5em
  text-align center
  font-family 'Candal'

.u-containerDefault
  max-width 800px
  margin 0 auto

.burguer-button
	width 40px
	border-radius 50%
	line-height 40px
	height 40px
	display inline-block
	text-align center
	cursor pointer
    color black
	position fixed
	top 10px
	left 20px


.Header
  background-image url('../img/7.jpg')
  background-position center
  background-repeat no-repeat
  background-size cover
  margin-top 3.75em
  padding 1.3em 0
  text-align center

.Header-image
  border 4px solid white
  border-radius 50%

.Header-name, .Header-link
  color black

.Header-link
  font-size 2.2em
  font-weight bold
  text-decoration none

.Header-name
  font-size 1.5em
  font-weight 300
  margin 0

.MainMenu
  background #FFF
  text-align center
  height 3.75em
  position fixed
  left 0
  right 0
  top 0

.MainMenu-scroll
  background: #000
  .MainMenu-link
    color: #0cf

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block
  &:hover
    border-bottom 2px solid #0cf

.MainMenu-link
  color #000
  text-decoration none
  line-height 3.75em
  margin-right 1.5em

.Profile
  text-align center
  padding 0 1em

.Profile-link
  background orange
  color white
  text-decoration none
  padding .5em 1em
  border-radius 2em
  margin-right .5em
  display inline-block
  margin-bottom 1em
  &.twitter
    background #55ACEE
  &.linkedin
    background #1178b3
  &.github
    background #829AA8

.Work
  margin-top 2em
  text-align center
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around

.Work-item
  display inline-block
  margin-bottom 1.8em

.Work-imageContainer
  margin 0

.Work-description
  font-size 1.5em
  color #515151
  font-style italic

.skylls
  width 60%
  margin 0 auto
  margin-bottom 5%

.Skylls-item
  margin 3%

.Work-imageSkylls
  display: inline-block;
  margin: 12px

.Footer
  //background-image url('../img/bg2.jpg')
  background #272727
  //background-repeat no-repeat
  //background-position center
  //background-size cover
  padding 2em 0
  text-align center

.Footer-form
  text-align center
  display inline-block

.Footer-left
  display inline-block
  max-width 32em
  text-align center
  vertical-align top

.Footer-title,
.Footer-description
  color #939393

.Profile-description-central
  text-align center
  font-size: 18px


.center
  width 60%
  margin 0 auto
  text-align justify

.liner
  text-decoration underline


.Footer-formInput,
.Footer-textarea
  color gray
  border none
  display block
  margin-bottom 1em
  border-radius 1px
  padding .5em
  margin 0 auto 1em
  outline 0

.Footer-textarea
  resize none

.Footer-button
  background orange
  border-radius 1px
  color white
  border none
  border-bottom 3px solid #B97349
  padding .5em 1em

.Slider
  background black
  &-container
    max-width 1024px
    margin 0 auto

.gototop
  font-size 11px
  position absolute
  top 10px
  right 10px
  color #777

@media screen and (max-width: 480px)

  .Header
      margin-top 0

  .burguer-button
      z-index 7
      background: #deddddba

  .Profile
    &-link
      display block

   .MainMenu
       bottom 0
       left -100%
       height auto
       background rgba(85,172,238,0.529)
       z-index 2
       font-size 20px
       display flex
       align-items center
       width 100%
       transition: .3s

   .MainMenu.active
       left 0

   .MainMenu-list
       position static
       flex 1
       border-top 1px solid #fff

   .MainMenu-item
       display block
       border-bottom: 1px solid #fff

    .MainMenu-link
        font-family: 'Candal'

    .MainMenu-scroll .MainMenu-link
        color: black

@media screen and (max-width: 767px)

  .Footer
    &-form
      display block
    &-formInput
    &-textarea
      width 90%
      box-sizing border-box

@media screen and (min-width: 767px)

  .Profile-description-central,.Profile-university,.Profile-description,.Profile-cv,.Profile-education
      font-size 24px
